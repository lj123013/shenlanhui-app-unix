						:class="value.isFinish ? 'aiItemoption' : 'aiItem'">
						<view class="flex flex-row items-center">
							<cl-image width="72rpx" height="72rpx" :pt="{ className: 'mr-2' }"
								:src="value.icon"></cl-image>
							<view>
