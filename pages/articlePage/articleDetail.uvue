							:pt="{text:{className:'text-sm text-gray-400'}}"></cl-loadmore>
					</view>
					<cl-empty v-if="commonList.length == 0" :fixed="false" text="暂无评论"
						:pt="{className:'h-[200px]'}"></cl-empty>
				</view>

			</view>
		</view>
		<view class="content px-4 pb-10" v-else>
			<cl-empty text="暂无数据"></cl-empty>
		</view>
		<!-- 遮罩层 -->
		<view style="height: 0" v-if="isPubComment">
			<view class="mask" @touchmove.stop.prevent :class="isPubComment ? 'on' : ''" @click="closePopup">
			</view>
		</view>

		<view class="footer-container" :style="{ bottom: inputBottom + 'px' }" v-if="getmessage.id">
			<view class="input-section">
				<cl-input v-model="input" @confirm="clickcommon" :adjustPosition="false" :clearable='true'
					:border="false" :pt="{
					className: '!bg-neutral-100 rounded-full pl-3'
				}" placeholder="写评论"></cl-input>
			</view>
			<view class="actions-section" v-if='!isPubComment'>
				<view class="action-item" @click="clickactive('like')">
					<cl-icon v-if="getmessage.is_liked==true" name="heart-fill" color="#FF4646" :size="30"
						width="34rpx"></cl-icon>
					<cl-icon v-else name="aixin-1" :size="30" width="34rpx" color="#464646"></cl-icon>
					<cl-text color="#464646" :pt="{ className: 'text-xs action-text' }">点赞</cl-text>
				</view>
				<view class="action-item" @click="clickactive('bookmark')">
					<cl-icon v-if="getmessage.is_bookmarked==true" name="a-shoucangdianji-1" :size="30" width="36rpx"
						color="#FFAA00"></cl-icon>
					<cl-icon v-else name="a-shoucangdianji" :size="30" width="36rpx" color="#464646"></cl-icon>
					<cl-text color="#464646" :pt="{ className: 'text-xs action-text' }">收藏</cl-text>
				</view>
				<view class="action-item" @tap="sharevisible = true">
					<cl-icon name="zhuanfa1" :size="28" color="#464646"></cl-icon>
					<cl-text color="#464646" :pt="{ className: 'text-xs action-text' }">分享</cl-text>
				</view>
			</view>
			<cl-text v-else :pt="{ className: 'z-999 action-text text-primary-500' }" @click="clickcommon">发送</cl-text>
		</view>


		<shareMenu v-if="sharevisible" :shareMessage="getmessage" :articleId="getmessage?.id"
			:hasImage="getmessage?.featured_image==null?false:true" :sharetype="type" :sharevisible='sharevisible'
			@close="handelclose"></shareMenu>

	</cl-page>
</template>
<script setup>
	import { ref, reactive, onMounted } from "vue";
	import { router, isNull, parse, isArray, type Response, isEmpty, userInfo } from "@/cool";
	import { useUi } from "@/uni_modules/cool-ui";
	import shareMenu from '@/components/shareMenu.uvue'
	import { newsinfo, articleinfo, comments, clickcomments, postsInfo } from "@/cool/service/list"
	import { follow, Cancelfollow, interactions } from "@/cool/service/user"
	const ui = useUi();
	const sharevisible = ref(false);
	const generateimage = ref(true)
	const showAiInterpretation = ref(false)
	const user = reactive({ uid: 1 }); // 假设有用户信息，实际请替换为你的登录逻辑
	// 定义文章数据类型（注释形式）
	type typeauthor = {
		id : number
		avatar ?: string
		username ?: string
		nickname ?: string
		is_followed ?: boolean
	}
	type timestamps = {
		created_at : string
		published_at : string
		updated_at : string
	}
	type ArticleData = {
		id ?: number
		title ?: string
		cover_image ?: string
		featured_image ?: string
		content ?: string;//新闻稿描述
		created_at ?: string;
		ip_location ?: string
		is_following_author ?: boolean//是否关注
		is_liked ?: boolean//是否点赞
		is_bookmarked ?: boolean//是否收藏
		author : typeauthor
		timestamps ?: timestamps
		images ?: Array<string>

	};
	const getmessage = ref<ArticleData>({
		author: {
			id: 0,
			avatar: "",
			username: "",
		}
	}); // 这样就不会报错了
	const visible = ref(false);
	const input = ref("");
	const commentContent = ref('')
	function toggle() {
		visible.value = !visible.value;
	}
	function handelclose(val : Boolean) {
		sharevisible.value = val
	}
	// 响应式文章数据
	const articleId = ref<number>(0)//文章id
	const type = ref<string>("文章")//文章类型新闻稿还是文章
	type aiList = {
		title : string;
		content : string;
		icon : string;
		isFinish : Boolean;

	};
	const aiMwnu = reactive<aiList[]>([
		{
			title: 'AI提纲摘要',
			content: '提取文章基本要素，简明结构化总结',
			icon: '/static/image/aiIcon1.png',
			isFinish: false
		},
		{
			title: '市场趋势分析',
			content: '分析行业发展趋势与市场前景',
			icon: '/static/image/aiIcon2.png',
			isFinish: true
		},
		{
			title: '背景知识补充',
			content: '提供相关概念解释与背景资料',
			icon: '/static/image/aiIcon3.png',
			isFinish: false
		},
		{
			title: '投资参考建议',
			content: '生成相关投资思路与风险提示',
			icon: '/static/image/aiIcon4.png',
			isFinish: false
		}
	])
	type common = {
		content : string;
		author : typeauthor;
		created_at : string;
	}
	const commonList = ref<common[]>([])


	function pubComment() {
		if (!isNull(user)) {
			uni.showToast({ title: "请先登录", icon: "none" });
			return;
		}
		if (!isNull(input)) {
			uni.showToast({ title: "请输入评论内容", icon: "none" });
			return;
		}
		input.value = "";
		uni.showToast({ title: "评论成功", icon: "success" });
	}
	//点赞，收藏
	const clickactive = (typeitem : string) => {
		let typetitle = ''
		if (type.value == '新闻稿') {
			typetitle = 'shenlantong_article'
		} else if (type.value == '圈子') {
			typetitle = "post"
		} else {
			typetitle = 'article'
		}
		interactions(typetitle, articleId.value, { type: typeitem }).then(res => {
			if (typeitem == 'like') {
				getmessage.value.is_liked == true
				ui.showToast({
					message: "点赞成功",
				});
			} else {
				getmessage.value.is_bookmarked = true
				ui.showToast({
					message: "收藏成功",
				});
			}

		}).catch(err => {
			ui.showToast({
				message: (err as Response).message!,
			});
		})
	}
	// 处理键盘事件
	const inputBottom = ref(0)
	const isPubComment = ref(false)
	const closePopup = () => {
		uni.hideKeyboard()
		isPubComment.value = false
		inputBottom.value = 0
		input.value = ""
	}
	onReady(() => {
		uni.onKeyboardHeightChange((res) => {
			console.log(res, '键盘高度')
			if (res.height > 0) {
				inputBottom.value = res.height
				isPubComment.value = true
			} else {
				closePopup()
			}
		})

	});
	//获取评论列表
	const getconmmon = () => {
		let changeType = ''
		if (type.value == '新闻稿') {
			changeType = "shenlantong_article"
		} else if (type.value == '圈子') {
			changeType = "post"
		} else {
			changeType = "article"
		}
		comments({
			commentable_type: changeType,
			commentable_id: articleId.value
		}).then(res => {
			const result = parse<UTSJSONObject>(res)!
			const getList = result.getArray('data')
			if (getList != null) {
				// 关键修复：解析为 common[] 而不是 common
				const tempList : common[] = []
				for (let i = 0; i < getList!!.length; i++) {
					const subItem = getList!![i]
					if (!(subItem instanceof UTSJSONObject)) continue
					const itemContent = subItem.content as string
					const itemCreatedat = subItem.created_at as string
					const authorObj = subItem.get('author') as UTSJSONObject
					tempList.push({
						content: itemContent != null ? itemContent : "",
						created_at: itemCreatedat != null ? itemCreatedat : "",
						author: {
							id: authorObj.get('id') as number,
							avatar: authorObj.get('avatar') as string,
							nickname: authorObj.get('nickname') as string
						} as typeauthor
					} as common)
				}
				commonList.value = tempList
			}
			// console.log("评论列表", commonList.value)

		}).catch(err => {
			ui.hideLoading()
			ui.showToast({
				message: "获取评论失败",
			});
		})
	}
	//获取新闻稿详情
	const getNewsdata = async () => {
		try {
			const res = await newsinfo(articleId.value, {})
			ui.hideLoading()
			getmessage.value = parse<ArticleData>(res)!
			await getconmmon() // 等待评论获取完成
		} catch (err) {
			ui.hideLoading()
			ui.showToast({
				message: "获取详情失败",
			});
		}
	}
	// 获取文章详情
	const getarticledata = async () => {
		try {
			const res = await articleinfo(articleId.value, {})
			ui.hideLoading()
			getmessage.value = parse<ArticleData>(res)!
			await getconmmon() // 等待评论获取完成
		} catch (err) {
			ui.hideLoading()
			ui.showToast({
				message: "获取详情失败",
			});
		}
	}
	// 获取圈子详情
	const getpostsInfo = async () => {
		try {
			const res = await postsInfo(articleId.value, {})
			ui.hideLoading()
			getmessage.value = parse<ArticleData>(res)!
			await getconmmon() // 等待评论获取完成
		} catch (err) {
			ui.hideLoading()
			ui.showToast({
				message: "获取详情失败",
			});
		}
	}

	// 关注用户
	const followBtn = () => {
		follow({
			following_id: getmessage.value.author.id
		}).then(res => {
			getmessage.value.is_following_author = true
			ui.showToast({
				message: "关注用户成功",
			});
		})
	}

	// 评论文章
	const clickcommon = () => {
		let changeType = ''
		if (type.value == '新闻稿') {
			changeType = "shenlantong_article"
		} else if (type.value == '圈子') {
			changeType = "post"
		} else {
			changeType = "article"
		}
		clickcomments({
			commentable_type: changeType,
			commentable_id: articleId.value,
			content: input.value
		}).then(res => {
			ui.showToast({
				message: "评论成功",
			});
			getconmmon()
			closePopup()
		}).catch(err => {
			ui.hideLoading()
			ui.showToast({
				message: "评论失败",
			});
		})
	}
	// 根据图片数量获取图片宽度
	function getImageWidth() : string {
		if (!isNull(getmessage.value)) {
			const images = getmessage.value!!.images;
			if (isArray(images) && images!!.length > 0) {
				const imageCount = images!!.length;
				const count = Math.min(imageCount, 3);
				if (count === 1) {
					return '384rpx';
				} else if (count === 2) {
					return '268rpx';
				} else {
					return '210rpx';
				}
			}
		}
		// 默认返回值
		return '210rpx';
	}
	// 根据图片数量和索引获取图片样式类
	function getImageClass(index : number) : string {
		let classes = ['mb-2'];
		if (!isNull(getmessage.value)) {
			const images = getmessage.value!!.images;
			if (isArray(images) && images!!.length > 0) {
				const imageCountmr = images!!.length;
				const countMr = Math.min(imageCountmr, 3);
				if (countMr === 2) {
					// 两张图片时，第一张添加右边距
					if (index === 0) {
						classes.push('mr-2');
					}
				} else if (countMr === 3) {
					// 三张图片时，前两张添加右边距
					if (index < 2) {
						classes.push('mr-2');
					}
				}
			}
		}
		return classes.join(' ');
	}
	// 页面加载时获取路由参数
	onMounted(() => {
		const params = router.params();
		console.log(params.articleId)
		ui.showLoading("加载中")
		if (!isNull(params.articleId)) {
			articleId.value = params.articleId as number;
			if (!isNull(params.title)) {
				type.value = params.title as string
			}
			if (type.value == '新闻稿') {
				getNewsdata()
			} else if (type.value == '圈子') {
				getpostsInfo()
			} else {
				getarticledata()

			}

		}


	});
</script>

<style scoped>
	.article-Ai {
		background-image: linear-gradient(to right, #6779E2, #7352AC);
		border-radius: 10rpx;
	}

